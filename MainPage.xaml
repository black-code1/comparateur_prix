<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rater.MainPage">

    
    <FlexLayout Direction="Column"
                AlignItems="Center">
        <Image Source="kolofap.svg" HeightRequest="50"/>
        <Border Stroke="#000000"
        StrokeThickness="1"
        Background="#F4F4F4"
        Padding="16,8"
        HorizontalOptions="Center">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="0,0,0,0" />
            </Border.StrokeShape>
            <Editor 
                x:Name="search"
                Placeholder="search"
                WidthRequest="250"
                AutoSize="TextChanges"/>
        </Border>
    </FlexLayout>


</ContentPage>
